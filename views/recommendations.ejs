<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('partials/navbar') %> <%- include('partials/flash-messages') %>

    <div class="container mt-4">
      <div class="row">
        <div class="col-12">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="bi bi-lightbulb"></i> Recommendations</h1>
            <% if (user && user.role === 'admin') { %>
            <button
              class="btn btn-primary"
              data-bs-toggle="modal"
              data-bs-target="#addRecommendationModal"
            >
              <i class="bi bi-plus-circle"></i> Add Recommendation
            </button>
            <% } %>
          </div>

          <!-- Search and Filter Form -->
          <form action="/recommendations" method="GET" class="mb-4">
            <div class="row g-3">
              <div class="col-md-6">
                <div class="input-group">
                  <input
                    type="text"
                    class="form-control"
                    name="search"
                    placeholder="Search tip, stall, or user..."
                    value="<%= filters.search %>"
                  />
                  <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i>
                  </button>
                </div>
              </div>
              <div class="col-md-3">
                <select class="form-select" name="stall" onchange="this.form.submit()">
                  <option value="">All Stalls</option>
                  <% if (stalls && stalls.length > 0) { %>
                    <% stalls.forEach(function(stall) { %>
                      <option value="<%= stall.id %>" <%= filters.stall == stall.id ? 'selected' : '' %>>
                        <%= stall.name %> (<%= stall.center_name %>)
                      </option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
              <div class="col-md-3">
                <select class="form-select" name="user" onchange="this.form.submit()">
                  <option value="">All Users</option>
                  <% if (recommendationUsers && recommendationUsers.length > 0) { %>
                    <% recommendationUsers.forEach(function(recUser) { %>
                      <option value="<%= recUser.id %>" <%= filters.user == recUser.id ? 'selected' : '' %>>
                        <%= recUser.username %>
                      </option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
            </div>
            <% if (filters.search || filters.stall || filters.user) { %>
              <div class="row mt-2">
                <div class="col-12">
                  <a href="/recommendations" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear Filters
                  </a>
                </div>
              </div>
            <% } %>
          </form>

          <!-- Recommendations Grid -->
          <div class="row">
            <% if (recommendations && recommendations.length > 0) { %> <%
            recommendations.forEach(function(rec) { %>
            <div class="col-md-6 mb-4">
              <div class="card h-100">
                <div class="card-body">
                  <div class="d-flex align-items-start mb-3">
                    <div class="bg-primary rounded-circle p-2 me-3">
                      <i class="bi bi-lightbulb text-white"></i>
                    </div>
                    <div class="flex-grow-1">
                      <h5 class="card-title mb-1"><%= rec.stall_name %></h5>
                      <% if (rec.center_name) { %>
                      <small class="text-muted"><%= rec.center_name %></small>
                      <% } %>
                    </div>
                  </div>
                  <% if (rec.food_name) { %>
                  <div class="mb-3">
                    <span class="badge bg-success"
                      ><%= rec.food_name %> (Must-Try)</span
                    >
                  </div>
                  <% } else { %>
                  <div class="mb-3">
                    <span class="badge bg-info">General Stall Tip</span>
                  </div>
                  <% } %>
                  <p class="card-text">"<%= rec.tip %>"</p>
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <small class="text-muted">
                      <i class="bi bi-person-circle"></i> by <%= rec.username %>
                      â€¢ <%= new Date(rec.created_at).toLocaleDateString() %>
                    </small>
                    <% if (user && user.role === 'admin') { %>
                    <div>
                      <button
                        class="btn btn-sm btn-outline-secondary me-1"
                        data-bs-toggle="modal"
                        data-bs-target="#editRecommendationModal"
                        data-id="<%= rec.id %>"
                        data-stall-id="<%= rec.stall_id %>"
                        data-food-id="<%= rec.food_id || '' %>"
                        data-tip="<%= rec.tip %>"
                      >
                        <i class="bi bi-pencil-square"></i>
                      </button>
                      <form
                        action="/recommendations/delete/<%= rec.id %>"
                        method="POST"
                        class="d-inline"
                      >
                        <button
                          type="submit"
                          class="btn btn-sm btn-outline-danger"
                          onclick="return confirm('Are you sure you want to delete this recommendation?');"
                        >
                          <i class="bi bi-trash"></i>
                        </button>
                      </form>
                    </div>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
            <% }); %> <% } else { %>
            <div class="col-12 text-center py-5">
              <i class="bi bi-search text-muted" style="font-size: 4rem"></i>
              <h4 class="mt-3 text-muted">No Recommendations Found</h4>
              <p class="text-muted">
                Try adjusting your filters or check back later.
              </p>
              <a href="/recommendations" class="btn btn-primary">
                <i class="bi bi-arrow-clockwise"></i> Reset Search
              </a>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Modals and Scripts (No changes needed here) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>